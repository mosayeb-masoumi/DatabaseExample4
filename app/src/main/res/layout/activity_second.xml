<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:layout_height="match_parent"
    tools:context="com.example.tornado.databaseexample4.SecondActivity">


    <Button
        android:id="@+id/btn_secondPage"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true"
        android:text="goto first page" />


    <TextView
        android:id="@+id/txt_secondPage"
        android:layout_width="180dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/btn_secondPage"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="74dp"
        android:textSize="15dp"
        android:textStyle="bold|italic"
        android:text="come from first page"/>
</RelativeLayout>
